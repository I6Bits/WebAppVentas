        <h4>Libro</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.LibroID)

        <div class="form-group">
            @Html.LabelFor(model => model.Titulo, new { @class = "control-label col-md-2" })
